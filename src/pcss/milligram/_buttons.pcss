/* Upload */
.btn--upload:link,
.btn--upload:visited {
  color: #fff;
  background-color: #0074D9;
  outline: none;
}

.btn--upload:active,
.btn--upload:focus {
  outline: 0;
}

.fileUpload {
    position: relative;
    overflow: hidden;
    margin-top: 30px;
}
.fileUpload input.upload {
    position: absolute;
    top: 0;
    right: 0;
    margin: 0;
    padding: 0;
    font-size: 20px;
    cursor: pointer;
    opacity: 0;
    filter: alpha(opacity=0);
}
