AddDefaultCharset UTF-8
RewriteEngine on
RewriteBase /
RewriteRule ^photo/([0-9]+)/?$ /api/photo.php?id=$1 [L]
RewriteRule ^photos$ /api/photos.php [L]
RewriteRule ^photo/new$ /api/new.php [L]
RewriteRule ^photo/create$ /api/create.php [L]
RewriteRule ^photo/([0-9]+)/edit?$ /api/edit.php?id=$1 [L]
RewriteRule ^photo/([0-9]+)/delete?$ /api/delete.php?id=$1 [L]
RewriteRule ^images/(.*)\.(gif|jpg|png|jpeg|svg)$ /public/images/$1.$2 [R,L]
RewriteRule ^css/(.*)\.(css)$ /public/css/$1.$2 [R,L]
RewriteRule ^js/(.*)\.(js)$ /public/js/$1.$2 [R,L]
